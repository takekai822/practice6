<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: @book.user %>
      <%= render "form", book: @booknew %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr id="book_<%= @book.id %>">
            <td>
              <%= link_to user_path(@book.user) do %>
                <%= image_tag @book.user.get_profile_image, size: "80x80" %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body.truncate(13) %>
            </td>
            <td class="favorite">
              <%= render "favorites/btn", book: @book %>
            </td>
            <td class="comment-count">
              コメント数：<%= @book.book_comments.count %><br>閲覧数：<%= @book.view_counts.count %>
            </td>
            <td id="star-rate-<%= @book.id %>"></td>
            <script>
              $(document).on('turbolinks:load', function(){
                $('#star-rate-<%= @book.id %>').empty();
                $('#star-rate-<%= @book.id %>').raty({
                  size : 36,
                  starOff : '<%= asset_path('star-off.png') %>',
                  starOn : '<%= asset_path('star-on.png') %>',
                  starHalf : '<%= asset_path('star-half.png') %>',
                  half : true,
                  readOnly : true,
                  score : <%= @book.rate %>,
                });
              })
            </script>
            <% if @book.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id} mb-1" %><br>
                <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger destroy_book_#{@book.id}", "data-confirm" => "本当に消しますか？" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <h3>comments</h3>
      <div class="comments">
        <%= render "book_comments/comment", book: @book %>
      </div>
      <div class="new-comment">
        <%= render "book_comments/form", book: @book, book_comment: @bookcomment %>
      </div>
    </div>
  </div>
</div>